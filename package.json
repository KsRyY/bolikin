{
  "name": "bolikin",
  "version": "0.0.0",
  "description": "A simlpe testing harness for Node.js and Browsers",
  "main": "dist/bolikin.cjs.js",
  "files": [
    "dist"
  ],
  "scripts": {
    "test": "npm run lint && jest",
    "lint": "xo",
    "prepublishOnly": "npm run build",
    "build": "bili"
  },
  "repository": {
    "url": "KsRyY/bolikin",
    "type": "git"
  },
  "author": "KsRyY<andy200511@126.com>",
  "license": "MIT",
  "dependencies": {},
  "devDependencies": {
    "xo": "^0.23.0",
    "eslint-config-rem": "^4.0.0",
    "prettier": "^1.15.2",
    "eslint-config-prettier": "^3.3.0",
    "eslint-plugin-prettier": "^3.0.0",
    "jest": "^23.6.0",
    "lint-staged": "^7.2.0",
    "husky": "^1.0.0-rc.13",
    "bili": "^3.3.0"
  },
  "jest": {
    "testEnvironment": "node"
  },
  "xo": {
    "extends": [
      "rem",
      "plugin:prettier/recommended"
    ],
    "envs": [
      "jest"
    ]
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "*.js": [
      "xo --fix",
      "git add"
    ],
    "*.{json,md}": [
      "prettier --write",
      "git add"
    ]
  }
}
